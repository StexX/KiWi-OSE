<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:s="http://jboss.com/products/seam/taglib"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:rich="http://richfaces.org/rich"
                xmlns:a="http://richfaces.org/a4j"
                xmlns:m="http://code.google.com/p/gmaps4jsf/"
			 	xmlns:c="http://java.sun.com/jstl/core"
                template="layout/template.xhtml">
                

<ui:define name="body">

    <rich:tabPanel style="height: 100%; border : 1; color:#FFCC00" switchType="normal" selectedTab="#{contentItemAction.selectedTab}">
        <rich:tab label="View" id="tab_view" action="#{viewAction.begin}" style="height: 100%">
			<rich:messages styleClass="message" /> 
		    <a:include viewId="view.xhtml"/>
        </rich:tab>
        <rich:tab label="Edit" id="tab_edit" action="#{editorAction.begin}">
			<rich:messages styleClass="message" /> 
 		    <a:include viewId="../edit.xhtml"/>
        </rich:tab>
        <rich:tab label="Media" id="tab_media" action="#{mediaAction.begin}">
			<rich:messages styleClass="message" /> 
 		    <a:include viewId="../media.xhtml"/>
        </rich:tab>
        <rich:tab label="Inspector" id="tab_inspector" >
			<rich:messages styleClass="message" /> 
 		    <a:include viewId="../inspector.xhtml"/>
        </rich:tab>
        <rich:tab label="History" id="tab_history" >
			<rich:messages styleClass="message" /> 
            There is not much else here yet
        </rich:tab>
    </rich:tabPanel>

</ui:define>

</ui:composition>