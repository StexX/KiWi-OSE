	 <ui:define name="breadcrumps">
	 	<ul>
	 		<li class="first">				 			
				<s:link view="/artaround/home.xhtml" value="#{messages['artaround.breadcrumps.home']}"/>
	 		</li>
	 		<li>				 			
				<s:link view="/artaround/pages/frontend/artWorks.xhtml" 
					value="#{messages['artaround.artworks.artworks']}"/>
			</li>
	 	</ul>
	 </ui:define>
    	
     <ui:define name="body"> 
	 
	 <!-- Full version of jQuery Tools + jQuery 1.3.2 -->
	 <script src="http://cdn.jquerytools.org/1.1.2/full/jquery.tools.min.js"></script>
	 	
	 
	<script>
	// execute your scripts when DOM is ready. this is a good habit
	jQuery(function() {		
			
		// initialize scrollable 
		jQuery("div.scrollable").scrollable({
			vertical:true, 
			size: 3
			
		// use mousewheel plugin
		}).mousewheel();	
		
	});
	</script>
	
	<style>
	
	/* root element for scrollable */
		.vertical { 			
			/* required settings */
			position:relative;
			overflow:hidden;		
			/* vertical scrollers have typically larger height than width */	
			height: 550px;	 
			width: 600px;
			border-top:1px solid #ccc;			
			padding-left:10px;
		}
		
		/* root element for scrollable items */
		.items {	
			position:absolute;
			
			/* this time we have very large space for height */	
			height:20000em;	
			margin: 0px;
		}
		
		/* single scrollable item */
		.items div {
			border-bottom:1px solid #ccc;
			margin:10px 0;
			padding:15px;
			font-size:12px;
			height:150px;
		}
		
		/* elements inside single item */
		.items img {
			float:left;
			margin-right:20px;
			/*width:150px;*/
			
		}		
		
		.items h3 {
			margin:0 0 5px 0;
			font-size:16px;
			color:#456;
			font-weight:normal;
		}
		
		.items h4 {
			margin:5px 0;
			font-size:14px;
			color:#456;
			font-weight:normal;
		}
		
		.items h5 {
			font-size:12px;
			color:#456;
			font-weight:bold;
		}
		
		/* the action buttons above the scrollable */
		#actions {
			width:620px;
			margin:20px 0 10px 0;	
		}
		
		#actions a {
			font-size:11px;		
			cursor:pointer;
			color:#666;
		}
		
		#actions a:hover {
			text-decoration:none;
			color:#222;
		}
		
		.disabled {
			visibility:hidden;		
		}
		
		.nextPage {
			float:right;
			margin-right:5px;
			text-decoration:none;
			
		}
		.prevPage {
			margin-left:5px;
			text-decoration:none;
		}
		
		#cover {
			margin-left:40px;
			margin-top:20px;
		} 
		
	</style>
	
	<div id="cover">

	<!-- HTML structures -->
	<div id="actions">
		<a class="prevPage"><img src="#{facesContext.externalContext.requestContextPath}/view/img/li_vv.gif"/> <img src="#{facesContext.externalContext.requestContextPath}/view/img/li_vv.gif" /> &#160;#{messages['artaround.back']}</a>
		<a class="nextPage">#{messages['artaround.forward']} <img src="#{facesContext.externalContext.requestContextPath}/view/img/li.gif" /> <img src="#{facesContext.externalContext.requestContextPath}/view/img/li.gif" /></a>
	</div>
	
	<!-- root element for scrollable -->
	<div class="scrollable vertical">	
		 
		<!-- root element for the items -->
		<div class="items">		
			
				<c:forEach items="#{showArtWorkAction.allArtWorks}" var="artWork">
					<div>
				    	<img src="#{showArtWorkAction.getThumbMasterFileNameFromArtwork(artWork)}"/>
				    	<h3>#{artWork.title}</h3> 
				    	<h5>#{artWork.description}</h5>
				    	<h4>#{artWork.authorName}</h4>
				    	<br/>
				    	<h:form>
							<a4j:commandButton value="#{messages['artaround.artworks.details']}" action="#{showArtWorkAction.selectArtWork(artWork)}"/>
						</h:form>							
					</div>
				</c:forEach>
				
				<!-- Dummy Pics zur Darstellung der jQuery Komponente -->
				<div>
					<img src="http://farm1.static.flickr.com/3650/3323058611_d35c894fab_m.jpg" width="150px"/>
					
					<h3>Lust Pavilion</h3>
					
					<h5>
						Dies ist ein Text bzw. eine Beschreibung, die es in sich hat - ha - ha.
					</h5>
					
					<h4>	
						Rodolfus Sintifaxus, Tirol
					</h4>
					<br/>  		
					
				</div>
			
				<div>
	
					<img src="http://farm1.static.flickr.com/3635/3323893254_3183671257_m.jpg" width="150px"/>
					
					<h3>Morgensterne</h3>
					
					<h5>
						The German Pavilion in Barcelona, designed by Ludwig Mies van der Rohe 
						and built for the International Exposition in 1929.
					</h5>
					
					<h4>	
						Mike Gonzales Schneider, Palermo
					</h4>
					<br/>					
					
				</div>
			
				<div>
					<img src="http://farm1.static.flickr.com/3624/3323893148_8318838fbd_m.jpg" width="150px"/>
					
					<h3>Architektur</h3>
					
					<h5>
						The German Pavilion in Barcelona, designed by Ludwig Mies van der Rohe 
						and built for the International Exposition in 1929.
					</h5>
					
					<h4>	
						CapCoster, Lungau
					</h4>
					<br/>						
					
				</div>
			
				<div>
					<img src="http://farm1.static.flickr.com/28/66523124_b468cf4978_m.jpg" width="150px"/>
					
					<h3>Weltuntergang</h3>
					
					<h5>
						The German Pavilion in Barcelona, designed by Ludwig Mies van der Rohe 
						and built for the International Exposition in 1929.
					</h5>
					
					<h4>	
						Gustaf Huber, Lungau
					</h4>
					<br/>					
					
				</div>
			
				<div>
	
					<img src="http://farm1.static.flickr.com/164/399223606_b875ddf797_m.jpg" width="150px"/>
					
					<h3>Blaumantel</h3>
					
					<h5>
						The German Pavilion in Barcelona, designed by Ludwig Mies van der Rohe 
						and built for the International Exposition in 1929.
					</h5>
					
					<h4>	
						Else Rainer Rielke, Oberndorf
					</h4>
					<br/>						
					
				</div>
			
				<div>
					<img src="http://farm1.static.flickr.com/163/399223609_db47d35b7c_m.jpg" width="150px"/>
					
					<h3>Blattsalat</h3>
					
					<h5>
						The German Pavilion in Barcelona, designed by Ludwig Mies van der Rohe 
						and built for the International Exposition in 1929.
					</h5>
					
					<h4>	
						Herbert Fuerte, London
					</h4>
					<br/>   	
					
				</div>		 
			</div>	
		</div>	
		<div id="actions">
			<a class="prevPage"><img src="#{facesContext.externalContext.requestContextPath}/view/img/li_vv.gif"/> <img src="#{facesContext.externalContext.requestContextPath}/view/img/li_vv.gif" /> &#160;#{messages['artaround.back']}</a>
			<a class="nextPage">#{messages['artaround.forward']} <img src="#{facesContext.externalContext.requestContextPath}/view/img/li.gif" /> <img src="#{facesContext.externalContext.requestContextPath}/view/img/li.gif" /></a>
		</div>	
	</div>	 		    
  </ui:define>			
