@charset "utf-8";
body {
	margin:0;
	padding:0;
	font-family:Verdana, Arial, Helvetica, sans-serif;
	font-size:11px;
}

#wrap {
	width:100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 10;
}

/*  Header - Logo, ApplicationNaV & Search */
#header {
	width:100%;
	background:#ccc;
	height:80px;
	background:url(../img/header_bg.jpg) repeat-x #75a841 ;
}
#logo {
	position:absolute;
	left:30px;
	top:7px;
}
#logo img {
	border:0;
}
#mainnav {
	position:absolute;
	left:200px;
	top:10px;
}
#mainnav a {
	color:white;
	text-decoration:none;
}
#mainnav a:hover {
	color:#F26421;
	text-decoration:none;
}

#mainnav .active {
	color:#F26421;
	text-decoration:none;
}

#mainnav ul {
	list-style-type:none
}
#mainnav ul li {
	float:left;
	margin:0 30px 0 0;
	text-align: center;
}
.mainnav_title {
	font-size:2em;
	display:block;
	font-weight:bold;
}
.mainnav_subtitle {
	color:black;
	font-size:0.9em;
}
#searchbox {
	float:right;
	margin:30px 10px 0 0;

}
#searchbox input {
	vertical-align:top;
	margin:0 0 0 5px;
	border:1px solid #fff;
}

#reasoning {
	float:right;
	vertical-align:top;
	margin:0 0 0 5px;
}

/*  Navigation Bar - History & User */
#navbar {
	border-top:1px solid #fff;
	height:18px;
	width:100%;
	background:#000;
	color:#ccc;
	padding-top:3px;
}
#navbar a, #navbar a:visited {
	color:#fff;
	text-decoration:none;
}
#navbar a:hover {
	color:#F26421;
}
#history {
	position:absolute;
	left:20px;
}

#user {
	float:right;
	margin:0 10px 0 0;
}
/*  Content - the Main Content Area Wrapper*/
#content {
	width:100%;
	margin:20px 0 0 0;
}

.errorMessage {
    margin-top: 20px;
}

/*#content_overlay {
	display: none;
	}*/

/*  Content - the Main Content Area Wrapper*/
body div#wrap div#content div#content_1column div#content_overlay span {
	display: block;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 100;
    color: #FFFFFF;
    background: rgba(54,54,54,0.5);
    font: 10px, sans-serif; text-align: center;
	width:100%;
	margin:0;
	padding: 0;
}

body div#wrap div#content div#content_1column div#content_overlay span#transparent_grey_bg {
	height: 100%;
}

body div#wrap div#content div#content_1column div#content_overlay span#popup {
    display: block
    position: fixed;
    top: 40%;
    left: 35%;
    z-index: 200;
    
    -moz-border-radius:5px;
    background-color:#FAFAFA;
    border:1px solid #75A841;
    color:#000;
    padding:20px;
    text-align:center;
    width:360px;
}

/*  Sidebar - the Sidebar menu */
#sidebar {
	width:150px;
	margin:0 0 0 10px;
	float:left;
	line-height:20px;
	background:#ddd;
}

#sidebar ul  {
	list-style-type:none;
	padding:0;
	border-top:1px solid #fff;
	background:#f0f0f0;
}

#sidebar ul li {
	border-bottom:1px solid #fff;
}
#sidebar li > a {
	display:block;
	text-decoration:none;
	color:#000;
	padding:2px 10px 2px 25px;
	margin:0 0 0 5px;
}
#sidebar li > a:hover {
	color:#F26421;
}
#sidebar li > .header {
    display:block;
    color:#000;
    padding:2px 10px 2px 5px;
    margin:0 0 0 5px;
}


