<rich:panel style="text-align: left; width: 100%;" 
    styleClass="kiwiBox" headerClass="kiwiBoxHeader" bodyClass="kiwiBoxContent"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:s="http://jboss.com/products/seam/taglib"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:a="http://richfaces.org/a4j">
	<f:facet name="header">
		<h:outputText value="#{widget.title}" />
	</f:facet>
	
	<s:fragment rendered="#{!widget.mainView}">
		<div id="widget-#{widget.id}">
			<ui:include src="/wiki/widgets/#{widget.contentPage}.xhtml"/>
		</div>
	</s:fragment>
	
</rich:panel>