	background: #ffcc00;
	border: 0;
}

#loginLinkx {
	color: black;
}

#signUp {
	color: black;
}

#abc\:logo {
        display: block;
        width: 136px;
        height: 100px;
        background: transparent url(../img/logica.png) 0 0 no-repeat;
}


#form_left\:panel_left_body {
	padding-top: -20px;
